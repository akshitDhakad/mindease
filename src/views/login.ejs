    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function() {
        var linkEls = document.getElementsByTagName('A');
        for (var linkIndex = 0; linkIndex < linkEls.length; linkIndex++) {
            var linkEl = linkEls[linkIndex];
            var href = linkEl.getAttribute('href');
            if (href.startsWith('/')) {
                linkEl.setAttribute('href', document.location.origin + href);
            }
            }
        });

    </script>

    <!-- auth form code  -->
    <script>
    document.getElementById('loginForm').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent the default form submission

        var formData = new FormData(this);
        fetch('http://localhost:5000/auth/login', { // Adjust the URL as needed
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
           
            if (data.success) {
                window.location.href = 'http://localhost:5000/'; // Redirect to home page
            } else {
                alert(data.message || 'Registration failed');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while submitting the form.');
        });
    });
    </script>


    
